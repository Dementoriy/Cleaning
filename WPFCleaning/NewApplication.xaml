<Page x:Class="WPFCleaning.NewApplication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFCleaning"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      Title="NewApplication">

    <Grid Background="#d8d8f2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />

        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="3" Grid.ColumnSpan="6" MaxHeight="500" Width="300" Margin="0 10 0 0" HorizontalAlignment="Left">

            <Border Margin="0 10 0 10" MinHeight="30" MaxHeight="40" MaxWidth="270"  Background="#3a388a" CornerRadius="3">
                <TextBlock FontSize="18" FontFamily="Arial bold" Text="Услуга" Foreground ="#d8d8f2"  Margin="100 5 0 0"/>
            </Border>

            <CheckBox Content="Экспресс уборка" x:Name="CheckExpressClean" Checked="CheckExpressClean_Checked" Margin="20 0 0 0" Foreground ="Black" FontFamily="Arial Bold" FontSize="18"/>
            <CheckBox Content="Генеральная уборка" x:Name="CheckGeneralClean" Checked="CheckGeneralClean_Checked" Margin="20 10 0 0" Foreground ="Black" FontFamily="Arial Bold" FontSize="18"/>
            <CheckBox Content="Послестроительная" x:Name="CheckBuildingClean" Checked="CheckBuildingClean_Checked" Margin="20 10 0 0" Foreground ="Black" FontFamily="Arial Bold" FontSize="18"/>
            <CheckBox Content="Уборка офисов" x:Name="CheckOfficeClean" Checked="CheckOfficeClean_Checked" Margin="20 10 0 0" Foreground ="Black" FontFamily="Arial Bold" FontSize="18"/>
        </StackPanel>

        <StackPanel Grid.Column="4" Grid.ColumnSpan="6" MaxHeight="500" MaxWidth="400" Margin="0 10 0 0" HorizontalAlignment="Right">
            <Border Margin="0 10 0 10" MinHeight="30" MaxHeight="40" MaxWidth="270"  Background="#3a388a" CornerRadius="3">
                <TextBlock FontSize="18" FontFamily="Arial bold" Text="Дополнительные услуги" Foreground ="#d8d8f2"  Margin="10 5 10 0"/>
            </Border>

            <CheckBox x:Name="WindowClean" Content="Мытье окон" Checked="WindowClean_Checked" FontSize="18" FontFamily="Arial bold"/>

            <ComboBox materialDesign:HintAssist.Hint="количество" x:Name="WindowCleanBox" Margin="20 -5 5 5" Height="30" FontFamily="Arial bold" Background="#d8d8f2" Foreground="#d8d8f2" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <mah:NumericUpDown x:Name="NumericUpDownKolvoWindow" materialDesign:HintAssist.Hint="Количество окон" Padding="0" Foreground="Black" FontSize="12" UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" FontFamily="Arial bold" />
                <mah:NumericUpDown x:Name="NumericUpDownKolvoDoor" materialDesign:HintAssist.Hint="Количество дверей" Padding="0" Foreground="Black" FontSize="12" UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" FontFamily="Arial bold" />
            </ComboBox>
            <CheckBox x:Name="ChemistryClean" Content="Химчистка" FontSize="18" FontFamily="Arial bold" Checked="ChemistryClean_Checked"/>

            <ComboBox materialDesign:HintAssist.Hint="количество" x:Name="ChemistryCleanBox" Margin="20 -5 5 5" Height="30" FontFamily="Arial bold" Foreground="#d8d8f2" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <mah:NumericUpDown x:Name="NumericUpDownKolvoSofa" materialDesign:HintAssist.Hint="Количество диванов" Padding="0" Foreground="Black" FontSize="12" UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" FontFamily="Arial bold" />
                <mah:NumericUpDown x:Name="NumericUpDownKolvoChaer" materialDesign:HintAssist.Hint="Количество кресел" Padding="0" Foreground="Black" FontSize="12" UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" FontFamily="Arial bold" />
                <mah:NumericUpDown x:Name="NumericUpDownKolvoCarpet" materialDesign:HintAssist.Hint="Количество ковров" Padding="0" Foreground="Black" FontSize="12" UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" FontFamily="Arial bold" />
            </ComboBox>

            <CheckBox x:Name="Dezinfection" Content="Дезинфекция" FontSize="18" FontFamily="Arial bold" Checked="Dezinfection_Checked"/>

            <ComboBox materialDesign:HintAssist.Hint="количество" x:Name="DezinfectionBox" Margin="20 -5 5 5" Height="30" Foreground="#d8d8f2" FontFamily="Arial bold" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <mah:NumericUpDown x:Name="NumericUpDownKolvoDez" materialDesign:HintAssist.Hint="Площадь" Padding="0" Foreground="Black" FontSize="12" UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" FontFamily="Arial bold" />
            </ComboBox>

        </StackPanel>
    </Grid>
</Page>
